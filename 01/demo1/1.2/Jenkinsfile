pipeline{
    agent any

    parameters{
        booleanParam(name: 'RC', defaultValue: false, description: 'Is this a Release Candidate?')
    }
    environment{
        VERSION = sh(script: 'cd 01/solution && npx -c \'echo $npm_package_version\'', returnStdout: true).trim()
        VERSION_RC = 'rc.2'
    }

    stages{
        stage('build'){
            environment{
                VERSION_SUFFIX = sh(script: 'if [ "${param.RC}" == "true"]; then echo -n "${VERSION_RC}+ci.${BUILD_NUMBER}"; else echo -n "${VERSION_RC}"; fi', returnStdout: true).trim()
            }
            steps{
                dir('./01/solution'){
                    echo "Building version ${VERSION} with suffix: ${VERSION_SUFFIX}"
                    sh '''
                    npm install
                    npm run build
                    '''
                }
            }
        }
        stage(' Unit Test'){
        
        }
         stage('Publish'){
            when{
                expression{
                    return params.RC
                }
            }
            steps{
               archiveAtifacts('01/solution/app')
            }
         }
    }    
}